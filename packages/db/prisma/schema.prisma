generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

enum Side {
  yes
  no
}

model StockBalance {
  id        String @id @default(uuid())
  user      User   @relation(fields: [userId], references: [id])
  userId    String
  side      Side
  locked    Int
  available Int
  marketId  String
  market    Market @relation(fields: [marketId], references: [id])
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  password     String
  role         Role
  InrBalance   Int            @default(0)
  stockBalance StockBalance[]
}

model Market {
  id            String         @id @default(uuid())
  title         String
  description   String
  sourceOfTruth String
  endDate       DateTime
  imageUrl      String
  StockBalance  StockBalance[]
}
